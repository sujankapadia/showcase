---
import BaseLayout from '../layouts/BaseLayout.astro';
import speakingEvents from '../data/speaking.json';

// Helper to format date
function formatDate(dateStr: string): string {
  // Handle malformed dates like "2016-05-00"
  const cleanDate = dateStr.replace('-00', '-01');
  const date = new Date(cleanDate);
  return date.toLocaleDateString('en-US', { month: 'short', year: 'numeric' });
}

// Sort events by date (newest first)
const sortedEvents = [...speakingEvents].sort((a, b) =>
  new Date(b.Date.replace('-00', '-01')).getTime() - new Date(a.Date.replace('-00', '-01')).getTime()
);

// Separate upcoming vs past (using current date)
const now = new Date();
const upcomingEvents = sortedEvents.filter(e => new Date(e.Date.replace('-00', '-01')) > now);
const pastEvents = sortedEvents.filter(e => new Date(e.Date.replace('-00', '-01')) <= now);

// Get unique event types for the topics section
const speakingTopics = [
  'AI Coding Agents and the Future of Development',
  'AI Strategy and Governance for Enterprises',
  'Human-AI Collaboration in Software Teams',
  'Building Developer Tools with LLMs',
];
---

<BaseLayout title="Speaking" description="Speaking engagements, panels, and workshops on AI and software development">
  <section class="py-16 md:py-24">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <p class="section-label mb-4">Events & Talks</p>
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
        Speaking
      </h1>
      <p class="text-xl text-gray-400 mb-12">
        Panels, talks, and workshops on AI, developer tools, and technology leadership.
      </p>

      <!-- Speaking topics -->
      <div class="mb-16">
        <h2 class="text-2xl font-bold text-white mb-6">
          Topics I Speak About
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          {speakingTopics.map((topic, index) => (
            <div class="flex items-center gap-3 p-4 bg-navy-800 border border-navy-600 rounded-lg">
              <span class="text-xs font-mono text-accent-400">0{index + 1}</span>
              <span class="text-gray-300">{topic}</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Upcoming Events -->
      {upcomingEvents.length > 0 && (
        <div class="mb-16">
          <h2 class="text-2xl font-bold text-white mb-6">
            Upcoming Events
          </h2>
          <div class="space-y-6">
            {upcomingEvents.map((event) => (
              <a
                href={event.URL}
                target="_blank"
                rel="noopener noreferrer"
                class="group block bg-gradient-to-br from-navy-800 to-navy-900 rounded-xl p-6 border border-accent-500/30 hover:border-accent-500/60 hover:shadow-lg hover:shadow-accent-500/10 transition-all duration-300"
              >
                <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
                  <div>
                    <h3 class="text-lg font-semibold text-white group-hover:text-cyan-400 transition-colors">
                      {event.Title}
                    </h3>
                    <p class="mt-2 text-gray-400 text-sm">
                      {event.Description}
                    </p>
                    <div class="mt-3 flex flex-wrap items-center gap-3 text-sm text-gray-500">
                      <span class="font-medium text-accent-400">{formatDate(event.Date)}</span>
                      <span>&#183;</span>
                      <span>{event.Location}</span>
                    </div>
                  </div>
                  <span class="inline-flex items-center px-3 py-1 text-xs font-medium bg-accent-500/20 text-accent-400 rounded-full flex-shrink-0">
                    {event.Type}
                  </span>
                </div>
              </a>
            ))}
          </div>
        </div>
      )}

      <!-- Past engagements -->
      <div>
        <h2 class="text-2xl font-bold text-white mb-6">
          Past Engagements
        </h2>
        <div class="space-y-6">
          {pastEvents.map((event) => (
            <a
              href={event.URL}
              target="_blank"
              rel="noopener noreferrer"
              class="group block bg-navy-800 rounded-xl p-6 border border-navy-600 hover:border-cyan-500/50 hover:shadow-lg hover:shadow-cyan-500/10 transition-all duration-300"
            >
              <div class="flex flex-col md:flex-row md:items-start justify-between gap-4">
                <div class="flex-1">
                  <h3 class="text-lg font-semibold text-white group-hover:text-cyan-400 transition-colors">
                    {event.Title}
                  </h3>
                  <p class="mt-2 text-gray-400 text-sm">
                    {event.Description}
                  </p>
                  <div class="mt-3 flex flex-wrap items-center gap-3 text-sm text-gray-500">
                    <span>{formatDate(event.Date)}</span>
                    <span>&#183;</span>
                    <span>{event.Location}</span>
                    <span>&#183;</span>
                    <span>{event.Role}</span>
                  </div>
                </div>
                <span class="inline-flex items-center px-3 py-1 text-xs font-medium bg-navy-700 text-gray-400 rounded-full flex-shrink-0">
                  {event.Type}
                </span>
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- CTA -->
      <div class="mt-16 p-8 bg-gradient-to-br from-navy-800 to-navy-900 rounded-2xl border border-navy-600 text-center">
        <h3 class="text-xl font-bold text-white">
          Interested in having me speak?
        </h3>
        <p class="mt-2 text-gray-400">
          I'm available for conferences, panels, podcasts, and workshops.
        </p>
        <a
          href="/contact?type=speaking"
          class="inline-flex items-center justify-center mt-6 px-6 py-3 text-base font-medium text-white bg-gradient-to-r from-accent-500 to-cyan-500 hover:from-accent-400 hover:to-cyan-400 rounded-lg shadow-lg shadow-accent-500/25 hover:shadow-accent-500/40 transition-all duration-200"
        >
          Get in touch
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
