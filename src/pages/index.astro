---
import BaseLayout from '../layouts/BaseLayout.astro';
import linkedinPosts from '../data/linkedin-posts.json';
import githubRepos from '../data/github-repos.json';

// Helper to format date
function formatDate(dateStr: string): string {
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-US', { month: 'short', year: 'numeric' });
}

// Helper to clean and truncate text
function cleanText(text: string): string {
  return text.replace(/\n/g, ' ').replace(/"/g, '').trim();
}

function truncate(text: string, maxLength: number): string {
  const clean = cleanText(text);
  if (clean.length <= maxLength) return clean;
  return clean.slice(0, maxLength).trim() + '...';
}

// Get the most recent posts for spotlight and recent section
const sortedPosts = [...linkedinPosts].sort((a, b) =>
  new Date(b.Date).getTime() - new Date(a.Date).getTime()
);
const spotlightPost = sortedPosts[0];
const recentPosts = sortedPosts.slice(1, 4);

// Featured project names (in order of priority)
const featuredRepoNames = ['claude-code-analytics', 'mcp-gateway', 'monolog', 'snaplist'];

// Get featured repos from JSON, filter public only
const featuredProjects = featuredRepoNames
  .map(name => githubRepos.find(r => r.Name === name && r.Private === 'False'))
  .filter(Boolean);

// Language colors for badges
const languageColors: Record<string, string> = {
  Python: 'bg-blue-400',
  JavaScript: 'bg-yellow-400',
  HTML: 'bg-orange-400',
  TypeScript: 'bg-blue-600',
};
---

<BaseLayout>
  <!-- Hero Section -->
  <section class="py-20 md:py-32">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-col md:flex-row items-center gap-12">
        <!-- Text Content -->
        <div class="flex-1 text-center md:text-left">
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-gray-900 dark:text-white">
            Sujan Kapadia
          </h1>
          <p class="mt-4 text-xl md:text-2xl text-accent-600 dark:text-accent-400 font-medium">
            Chief AI Officer | Building intelligent systems
          </p>
          <p class="mt-6 text-lg text-gray-600 dark:text-gray-300 max-w-2xl">
            Helping organizations harness AI to transform how they build software and serve their customers.
            Passionate about AI agents, developer tools, and the future of human-AI collaboration.
          </p>
          <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
            <a
              href="/contact"
              class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-accent-600 hover:bg-accent-700 rounded-lg shadow-sm hover:shadow-md transition-all duration-200"
            >
              Get in touch
            </a>
            <a
              href="/projects"
              class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-gray-700 dark:text-gray-200 bg-gray-100 dark:bg-gray-800 hover:bg-gray-200 dark:hover:bg-gray-700 rounded-lg transition-colors duration-200"
            >
              View my work
            </a>
          </div>
        </div>

        <!-- Headshot Placeholder -->
        <div class="flex-shrink-0">
          <div class="w-48 h-48 md:w-64 md:h-64 rounded-full bg-gradient-to-br from-accent-400 to-accent-600 flex items-center justify-center text-white text-6xl font-bold shadow-xl">
            SK
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Featured In Section -->
  <section class="py-12 bg-gray-50 dark:bg-gray-900">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <p class="text-center text-sm text-gray-500 dark:text-gray-400 uppercase tracking-wider mb-8">
        Featured In
      </p>
      <div class="flex flex-wrap justify-center items-center gap-8 md:gap-12 opacity-60">
        <span class="text-lg font-medium text-gray-600 dark:text-gray-400">Technical.ly</span>
        <span class="text-lg font-medium text-gray-600 dark:text-gray-400">Chariot Solutions</span>
        <span class="text-lg font-medium text-gray-600 dark:text-gray-400">Zip Code Wilmington</span>
      </div>
    </div>
  </section>

  <!-- Latest Thinking Section -->
  <section class="py-16 md:py-24">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between mb-12">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white">
          Latest Thinking
        </h2>
        <a href="/writing" class="text-accent-600 dark:text-accent-400 hover:text-accent-700 dark:hover:text-accent-300 font-medium">
          View all &rarr;
        </a>
      </div>

      <!-- Spotlight Post -->
      {spotlightPost && (
        <div class="mb-8">
          <a
            href={spotlightPost.ShareLink}
            target="_blank"
            rel="noopener noreferrer"
            class="block bg-gradient-to-br from-accent-50 to-white dark:from-gray-800 dark:to-gray-900 rounded-2xl p-8 border border-accent-100 dark:border-gray-700 hover:border-accent-300 dark:hover:border-accent-600 transition-colors"
          >
            <blockquote>
              <p class="text-xl md:text-2xl text-gray-800 dark:text-gray-200 leading-relaxed">
                "{truncate(spotlightPost.ShareCommentary, 280)}"
              </p>
              <footer class="mt-6 flex items-center gap-4">
                <span class="text-sm text-gray-500 dark:text-gray-400">
                  {formatDate(spotlightPost.Date)} &middot; LinkedIn
                </span>
                <span class="text-sm text-accent-600 dark:text-accent-400">
                  Read more &rarr;
                </span>
              </footer>
            </blockquote>
          </a>
        </div>
      )}

      <!-- Recent Posts Grid -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {recentPosts.map((post) => (
          <a
            href={post.ShareLink}
            target="_blank"
            rel="noopener noreferrer"
            class="group bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 hover:border-accent-300 dark:hover:border-accent-600 hover:shadow-lg transition-all duration-200 hover:-translate-y-1"
          >
            <p class="text-gray-700 dark:text-gray-300 line-clamp-4">
              {truncate(post.ShareCommentary, 180)}
            </p>
            <div class="mt-4 flex items-center justify-between">
              <span class="text-xs text-gray-500 dark:text-gray-400">{formatDate(post.Date)}</span>
              <span class="text-xs px-2 py-1 bg-gray-100 dark:bg-gray-700 rounded-full text-gray-600 dark:text-gray-300">LinkedIn</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Projects Section -->
  <section class="py-16 md:py-24 bg-gray-50 dark:bg-gray-900">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between mb-12">
        <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white">
          Featured Projects
        </h2>
        <a href="/projects" class="text-accent-600 dark:text-accent-400 hover:text-accent-700 dark:hover:text-accent-300 font-medium">
          View all &rarr;
        </a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {featuredProjects.map(project => (
          <a
            href={project.URL}
            target="_blank"
            rel="noopener noreferrer"
            class="group block bg-white dark:bg-gray-800 rounded-xl p-6 border border-gray-200 dark:border-gray-700 hover:border-accent-300 dark:hover:border-accent-600 hover:shadow-lg transition-all duration-200 hover:-translate-y-1"
          >
            <div class="flex items-start justify-between">
              <h3 class="font-semibold text-gray-900 dark:text-white group-hover:text-accent-600 dark:group-hover:text-accent-400">
                {project.Name}
              </h3>
              <svg class="w-5 h-5 text-gray-400 group-hover:text-accent-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </div>
            <p class="mt-2 text-sm text-gray-600 dark:text-gray-400 line-clamp-2">
              {project.Description}
            </p>
            <div class="mt-4 flex items-center gap-4">
              <span class="inline-flex items-center text-xs text-gray-500 dark:text-gray-400">
                <span class={`w-3 h-3 rounded-full ${languageColors[project.Language] || 'bg-gray-400'} mr-1.5`} />
                {project.Language}
              </span>
              <span class="inline-flex items-center text-xs text-gray-500 dark:text-gray-400">
                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                {project.Stars}
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Quick Contact CTA -->
  <section class="py-16 md:py-24">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white">
        Let's work together
      </h2>
      <p class="mt-4 text-lg text-gray-600 dark:text-gray-300">
        Interested in AI strategy, coding agents, or developer tools? I'd love to hear from you.
      </p>
      <div class="mt-8">
        <a
          href="/contact"
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-white bg-accent-600 hover:bg-accent-700 rounded-lg shadow-md hover:shadow-lg transition-all duration-200"
        >
          Get in touch
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
