---
import BaseLayout from '../layouts/BaseLayout.astro';
import linkedinPosts from '../data/linkedin-posts.json';
import githubRepos from '../data/github-repos.json';
import { readFileSync, existsSync } from 'fs';
import { resolve } from 'path';

// Parse latest update from merged markdown
let latestUpdate: { title: string; date: string; anchor: string } | null = null;
const updatesPath = resolve(process.cwd(), 'src/data/updates-merged.md');
if (existsSync(updatesPath)) {
  const md = readFileSync(updatesPath, 'utf-8');
  // Find the first post block (skip the site metadata block)
  const blocks = md.split(/^\+\+\+$/m).filter(b => b.trim());
  // blocks[0] = site metadata, blocks[1] = first post frontmatter, blocks[2] = first post content, ...
  if (blocks.length >= 2) {
    const frontmatter = blocks[1];
    const titleMatch = frontmatter.match(/title:\s*"(.+?)"/);
    const dateMatch = frontmatter.match(/date:\s*(\d{4}-\d{2}-\d{2})/);
    if (titleMatch && dateMatch) {
      const title = titleMatch[1];
      const date = dateMatch[1];
      const slug = title.toLowerCase().replace(/[^a-z0-9]+/g, '-').replace(/(^-|-$)/g, '');
      latestUpdate = { title, date, anchor: `${date}-${slug}` };
    }
  }
}

// Helper to format date
function formatDate(dateStr: string): string {
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-US', { month: 'short', year: 'numeric' });
}

// Helper to clean and truncate text
function cleanText(text: string): string {
  return text.replace(/\n/g, ' ').replace(/"/g, '').trim();
}

function truncate(text: string, maxLength: number): string {
  const clean = cleanText(text);
  if (clean.length <= maxLength) return clean;
  return clean.slice(0, maxLength).trim() + '...';
}

// Get the most recent posts for spotlight and recent section
const sortedPosts = [...linkedinPosts].sort((a, b) =>
  new Date(b.Date).getTime() - new Date(a.Date).getTime()
);
const spotlightPost = sortedPosts[0];
const recentPosts = sortedPosts.slice(1, 4);

// Featured project names (in order of priority)
const featuredRepoNames = ['claude-code-analytics', 'mcp-gateway', 'monolog', 'snaplist'];

// Get featured repos from JSON, filter public only
const featuredProjects = featuredRepoNames
  .map(name => githubRepos.find(r => r.Name === name && r.Private === 'False'))
  .filter(Boolean);

// Language colors for badges
const languageColors: Record<string, string> = {
  Python: 'bg-blue-400',
  JavaScript: 'bg-yellow-400',
  HTML: 'bg-orange-400',
  TypeScript: 'bg-blue-600',
};
---

<BaseLayout>
  <script slot="head" type="application/ld+json" set:html={JSON.stringify({
    "@context": "https://schema.org",
    "@type": "WebSite",
    "name": "Sujan Kapadia",
    "url": "https://sujankapadia.com"
  })} />
  <!-- Hero Section -->
  <section class="py-20 md:py-32 relative overflow-hidden">
    <!-- Background gradient effect -->
    <div class="absolute inset-0 bg-gradient-to-br from-accent-900/20 via-navy-900 to-cyan-900/20"></div>

    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 relative">
      <div class="flex flex-col md:flex-row items-center gap-12">
        <!-- Text Content -->
        <div class="flex-1 text-center md:text-left">
          <p class="section-label mb-4">Chief AI Officer at Chariot Solutions</p>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white">
            Building the future of
            <span class="gradient-text">intelligent systems</span>
          </h1>
          <p class="mt-6 text-lg text-gray-400 max-w-2xl">
            Helping organizations harness AI to transform how they build software and serve their customers.
            Passionate about AI agents, developer tools, and human-AI collaboration.
          </p>
          <div class="mt-8 flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
            <a
              href="/contact"
              class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-white bg-gradient-to-r from-accent-500 to-cyan-500 hover:from-accent-400 hover:to-cyan-400 rounded-lg shadow-lg shadow-accent-500/25 hover:shadow-accent-500/40 transition-all duration-200"
            >
              Get in touch
            </a>
            <a
              href="/projects"
              class="inline-flex items-center justify-center px-6 py-3 text-base font-medium text-gray-300 bg-navy-700 hover:bg-navy-600 border border-navy-600 hover:border-navy-500 rounded-lg transition-all duration-200"
            >
              View my work
            </a>
          </div>
        </div>

        <!-- Headshot with gradient ring -->
        <div class="flex-shrink-0">
          <div class="relative">
            <div class="absolute -inset-1 bg-gradient-to-r from-accent-500 via-cyan-500 to-accent-500 rounded-full blur opacity-75"></div>
            <img src="/headshot.jpg" alt="Sujan Kapadia" class="relative w-48 h-48 md:w-64 md:h-64 rounded-full object-cover" />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Latest Update Teaser -->
  {latestUpdate && (
    <section class="py-4 border-y border-navy-700">
      <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
        <a href={`/updates#${latestUpdate.anchor}`} class="flex items-center justify-center gap-3 group">
          <span class="relative flex h-2.5 w-2.5">
            <span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-cyan-400 opacity-75"></span>
            <span class="relative inline-flex rounded-full h-2.5 w-2.5 bg-cyan-500"></span>
          </span>
          <span class="text-sm text-gray-400">
            <span class="text-gray-500">Latest Post:</span>{' '}
            <span class="text-gray-300 group-hover:text-cyan-400 transition-colors">{latestUpdate.title}</span>{' '}
            <span class="text-gray-600">&mdash; {latestUpdate.date}</span>
          </span>
        </a>
      </div>
    </section>
  )}

  <!-- Latest Thinking Section -->
  <section class="py-16 md:py-24">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between mb-12">
        <div>
          <p class="section-label mb-2">Insights</p>
          <h2 class="text-2xl md:text-3xl font-bold text-white">
            Latest Thinking
          </h2>
        </div>
        <a href="/writing" class="text-cyan-400 hover:text-cyan-300 font-medium transition-colors">
          View all &rarr;
        </a>
      </div>

      <!-- Spotlight Post -->
      {spotlightPost && (
        <div class="mb-8">
          <a
            href={spotlightPost.ShareLink}
            target="_blank"
            rel="noopener noreferrer"
            class="block bg-gradient-to-br from-navy-800 to-navy-900 rounded-2xl p-8 border border-navy-600 hover:border-accent-500/50 transition-all duration-300"
          >
            <blockquote>
              <p class="text-xl md:text-2xl text-gray-200 leading-relaxed">
                "{truncate(spotlightPost.ShareCommentary, 280)}"
              </p>
              <footer class="mt-6 flex items-center gap-4">
                <span class="text-sm text-gray-500">
                  {formatDate(spotlightPost.Date)} &middot; LinkedIn
                </span>
                <span class="text-sm text-cyan-400">
                  Read more &rarr;
                </span>
              </footer>
            </blockquote>
          </a>
        </div>
      )}

      <!-- Recent Posts Grid -->
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        {recentPosts.map((post) => (
          <a
            href={post.ShareLink}
            target="_blank"
            rel="noopener noreferrer"
            class="group bg-navy-800 rounded-xl p-6 border border-navy-600 hover:border-cyan-500/50 hover:shadow-lg hover:shadow-cyan-500/10 transition-all duration-300"
          >
            <p class="text-gray-300 line-clamp-4">
              {truncate(post.ShareCommentary, 180)}
            </p>
            <div class="mt-4 flex items-center justify-between">
              <span class="text-xs text-gray-500">{formatDate(post.Date)}</span>
              <span class="text-xs px-2 py-1 bg-navy-700 rounded-full text-gray-400">LinkedIn</span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Projects Section -->
  <section class="py-16 md:py-24 bg-navy-950">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex items-center justify-between mb-12">
        <div>
          <p class="section-label mb-2">Open Source</p>
          <h2 class="text-2xl md:text-3xl font-bold text-white">
            Featured Projects
          </h2>
        </div>
        <a href="/projects" class="text-cyan-400 hover:text-cyan-300 font-medium transition-colors">
          View all &rarr;
        </a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        {featuredProjects.map(project => (
          <a
            href={project.URL}
            target="_blank"
            rel="noopener noreferrer"
            class="group block bg-navy-800 rounded-xl p-6 border border-navy-600 hover:border-cyan-500/50 hover:shadow-lg hover:shadow-cyan-500/10 transition-all duration-300"
          >
            <div class="flex items-start justify-between">
              <h3 class="font-semibold text-white group-hover:text-cyan-400 transition-colors">
                {project.Name}
              </h3>
              <svg class="w-5 h-5 text-gray-500 group-hover:text-cyan-400 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </div>
            <p class="mt-2 text-sm text-gray-400 line-clamp-2">
              {project.Description}
            </p>
            <div class="mt-4 flex items-center gap-4">
              <span class="inline-flex items-center text-xs text-gray-400">
                <span class={`w-3 h-3 rounded-full ${languageColors[project.Language] || 'bg-gray-400'} mr-1.5`} />
                {project.Language}
              </span>
              <span class="inline-flex items-center text-xs text-gray-400">
                <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                </svg>
                {project.Stars}
              </span>
            </div>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Quick Contact CTA -->
  <section class="py-16 md:py-24">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <p class="section-label mb-4">Get Started</p>
      <h2 class="text-2xl md:text-3xl font-bold text-white">
        Let's work together
      </h2>
      <p class="mt-4 text-lg text-gray-400">
        Interested in AI strategy, coding agents, or developer tools? I'd love to hear from you.
      </p>
      <div class="mt-8">
        <a
          href="/contact"
          class="inline-flex items-center justify-center px-8 py-4 text-lg font-medium text-white bg-gradient-to-r from-accent-500 to-cyan-500 hover:from-accent-400 hover:to-cyan-400 rounded-lg shadow-lg shadow-accent-500/25 hover:shadow-accent-500/40 transition-all duration-200"
        >
          Get in touch
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
