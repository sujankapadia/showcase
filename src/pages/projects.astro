---
import BaseLayout from '../layouts/BaseLayout.astro';
import githubRepos from '../data/github-repos.json';

// Filter to only public repos
const publicRepos = githubRepos.filter(r => r.Private === 'False');

// Featured project names (in order of priority)
const featuredRepoNames = ['claude-code-analytics', 'mcp-gateway', 'monolog', 'snaplist'];

// Get featured repos
const featuredProjects = featuredRepoNames
  .map(name => publicRepos.find(r => r.Name === name))
  .filter(Boolean);

// Get other public repos (not in featured list), sorted by most recently updated
const otherProjects = publicRepos
  .filter(r => !featuredRepoNames.includes(r.Name))
  .sort((a, b) => new Date(b.Updated).getTime() - new Date(a.Updated).getTime());

// Language colors for badges
const languageColors: Record<string, string> = {
  Python: 'bg-blue-400',
  JavaScript: 'bg-yellow-400',
  HTML: 'bg-orange-400',
  TypeScript: 'bg-blue-600',
  HCL: 'bg-purple-400',
  Jinja: 'bg-red-400',
};
---

<BaseLayout title="Projects" description="Open source projects and side experiments">
  <section class="py-16 md:py-24">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <p class="section-label mb-4">Open Source</p>
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
        Projects
      </h1>
      <p class="text-xl text-gray-400 mb-12">
        Open source tools and side projects I've built.
      </p>

      <!-- Featured Projects -->
      <div class="mb-16">
        <h2 class="text-2xl font-bold text-white mb-6">
          Featured
        </h2>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          {featuredProjects.map(project => (
            <a
              href={project.URL}
              target="_blank"
              rel="noopener noreferrer"
              class="group block bg-navy-800 rounded-xl p-6 border border-navy-600 hover:border-cyan-500/50 hover:shadow-lg hover:shadow-cyan-500/10 transition-all duration-300"
            >
              <div class="flex items-start justify-between">
                <h3 class="font-semibold text-lg text-white group-hover:text-cyan-400 transition-colors">
                  {project.Name}
                </h3>
                <svg class="w-5 h-5 text-gray-500 group-hover:text-cyan-400 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </div>
              <p class="mt-3 text-gray-400">
                {project.Description}
              </p>
              <div class="mt-4 flex items-center gap-4">
                {project.Language && (
                  <span class="inline-flex items-center text-sm text-gray-400">
                    <span class={`w-3 h-3 rounded-full ${languageColors[project.Language] || 'bg-gray-400'} mr-1.5`} />
                    {project.Language}
                  </span>
                )}
                <span class="inline-flex items-center text-sm text-gray-400">
                  <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                  {project.Stars}
                </span>
              </div>
              <p class="mt-3 text-xs text-gray-500">
                Updated {new Date(project.Updated).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
              </p>
            </a>
          ))}
        </div>
      </div>

      <!-- Other Projects -->
      {otherProjects.length > 0 && (
        <div>
          <h2 class="text-2xl font-bold text-white mb-6">
            More Projects
          </h2>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
            {otherProjects.map(project => (
              <a
                href={project.URL}
                target="_blank"
                rel="noopener noreferrer"
                class="group block bg-navy-800 rounded-lg p-4 border border-navy-600 hover:border-cyan-500/50 transition-all duration-300"
              >
                <h3 class="font-medium text-white group-hover:text-cyan-400 truncate transition-colors">
                  {project.Name}
                </h3>
                <p class="mt-1 text-sm text-gray-500 line-clamp-2">
                  {project.Description || 'No description'}
                </p>
                <div class="mt-2 flex items-center gap-3">
                  {project.Language && (
                    <span class="inline-flex items-center">
                      <span class={`w-2 h-2 rounded-full ${languageColors[project.Language] || 'bg-gray-400'} mr-1`} />
                      <span class="text-xs text-gray-500">{project.Language}</span>
                    </span>
                  )}
                  {parseInt(project.Stars) > 0 && (
                    <span class="inline-flex items-center text-xs text-gray-500">
                      <svg class="w-3 h-3 mr-0.5" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                      </svg>
                      {project.Stars}
                    </span>
                  )}
                </div>
                <p class="mt-2 text-xs text-gray-500">
                  Updated {new Date(project.Updated).toLocaleDateString('en-US', { month: 'short', day: 'numeric', year: 'numeric' })}
                </p>
              </a>
            ))}
          </div>
        </div>
      )}

      <!-- GitHub link -->
      <div class="mt-12 text-center">
        <a
          href="https://github.com/sujankapadia"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center gap-2 text-cyan-400 hover:text-cyan-300 font-medium transition-colors"
        >
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/>
          </svg>
          View all repositories on GitHub
        </a>
      </div>
    </div>
  </section>
</BaseLayout>
