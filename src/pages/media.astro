---
import BaseLayout from '../layouts/BaseLayout.astro';
import youtubeVideos from '../data/youtube-videos.json';
import chariotContent from '../data/chariot-content.json';

// Helper to extract YouTube video ID from URL
function getYouTubeId(url: string): string {
  const match = url.match(/[?&]v=([^&]+)/);
  return match ? match[1] : '';
}

// Helper to get YouTube thumbnail URL
function getYouTubeThumbnail(url: string): string {
  const id = getYouTubeId(url);
  return `https://img.youtube.com/vi/${id}/mqdefault.jpg`;
}

// Get podcasts from Chariot content
const podcasts = chariotContent.filter(item => item.Type === 'Podcast');

// Feature the first video
const featuredVideo = youtubeVideos[0];
const otherVideos = youtubeVideos.slice(1, 13); // Show first 12 after featured
---

<BaseLayout title="Media" description="Videos, podcasts, and presentations">
  <section class="py-16 md:py-24">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
        Media
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 mb-12">
        Videos, podcasts, and presentations.
      </p>

      <!-- Featured Video -->
      {featuredVideo && (
        <div class="mb-16">
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
            Featured
          </h2>
          <div class="aspect-video rounded-2xl overflow-hidden bg-gray-900">
            <iframe
              src={`https://www.youtube.com/embed/${getYouTubeId(featuredVideo.URL)}`}
              title={featuredVideo.Title}
              class="w-full h-full"
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
              allowfullscreen
            ></iframe>
          </div>
          <h3 class="mt-4 text-lg font-medium text-gray-900 dark:text-white">
            {featuredVideo.Title}
          </h3>
        </div>
      )}

      <!-- Video Grid -->
      <div class="mb-16">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
          Videos
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {otherVideos.map((video) => (
            <a
              href={video.URL}
              target="_blank"
              rel="noopener noreferrer"
              class="group block"
            >
              <div class="aspect-video bg-gray-200 dark:bg-gray-800 rounded-xl overflow-hidden relative">
                <img
                  src={getYouTubeThumbnail(video.URL)}
                  alt={video.Title}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-black/0 group-hover:bg-black/20 transition-colors flex items-center justify-center">
                  <div class="w-12 h-12 rounded-full bg-white/90 flex items-center justify-center opacity-0 group-hover:opacity-100 transition-opacity">
                    <svg class="w-5 h-5 text-gray-900 ml-1" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M6.3 2.841A1.5 1.5 0 004 4.11V15.89a1.5 1.5 0 002.3 1.269l9.344-5.89a1.5 1.5 0 000-2.538L6.3 2.84z" />
                    </svg>
                  </div>
                </div>
              </div>
              <h3 class="mt-3 font-medium text-gray-900 dark:text-white group-hover:text-accent-600 dark:group-hover:text-accent-400 line-clamp-2">
                {video.Title}
              </h3>
            </a>
          ))}
        </div>

        {youtubeVideos.length > 13 && (
          <div class="mt-8 text-center">
            <a
              href="https://www.youtube.com/playlist?list=PLloqgzEeMq16Lp9wKyqn31rOu0JhcokT4"
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 text-accent-600 dark:text-accent-400 hover:text-accent-700 dark:hover:text-accent-300 font-medium"
            >
              View all {youtubeVideos.length} videos on YouTube
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          </div>
        )}
      </div>

      <!-- Podcasts -->
      {podcasts.length > 0 && (
        <div>
          <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
            Podcast Appearances
          </h2>
          <div class="space-y-4">
            {podcasts.slice(0, 10).map((podcast) => (
              <a
                href={podcast.URL}
                target="_blank"
                rel="noopener noreferrer"
                class="group flex items-center gap-4 p-4 bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 hover:border-accent-300 dark:hover:border-accent-600 transition-colors"
              >
                <div class="w-14 h-14 bg-accent-100 dark:bg-accent-900/30 rounded-lg flex items-center justify-center flex-shrink-0">
                  <svg class="w-7 h-7 text-accent-600 dark:text-accent-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />
                  </svg>
                </div>
                <div class="flex-1 min-w-0">
                  <h3 class="font-medium text-gray-900 dark:text-white group-hover:text-accent-600 dark:group-hover:text-accent-400 truncate">
                    {podcast.Title}
                  </h3>
                  {podcast.Description && (
                    <p class="text-sm text-gray-500 dark:text-gray-400 line-clamp-1">
                      {podcast.Description}
                    </p>
                  )}
                </div>
                <svg class="w-5 h-5 text-gray-400 group-hover:text-accent-500 flex-shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                </svg>
              </a>
            ))}
          </div>

          {podcasts.length > 10 && (
            <div class="mt-6 text-center">
              <a
                href="https://chariotsolutions.com/podcasts/"
                target="_blank"
                rel="noopener noreferrer"
                class="text-accent-600 dark:text-accent-400 hover:text-accent-700 dark:hover:text-accent-300 font-medium"
              >
                View all podcasts on Chariot Solutions &rarr;
              </a>
            </div>
          )}
        </div>
      )}
    </div>
  </section>
</BaseLayout>
