---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Media" description="Videos, podcasts, and presentations">
  <section class="py-16 md:py-24">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
      <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-4">
        Media
      </h1>
      <p class="text-xl text-gray-600 dark:text-gray-300 mb-12">
        Videos, podcasts, and presentations.
      </p>

      <!-- Featured Video -->
      <div class="mb-16">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
          Featured
        </h2>
        <div class="aspect-video bg-gray-200 dark:bg-gray-800 rounded-2xl flex items-center justify-center">
          <div class="text-center p-8">
            <svg class="w-16 h-16 mx-auto text-gray-400 dark:text-gray-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <p class="mt-4 text-gray-500 dark:text-gray-400">
              Featured video will be embedded here
            </p>
          </div>
        </div>
      </div>

      <!-- Video Grid -->
      <div class="mb-16">
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
          Videos
        </h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {[1, 2, 3, 4, 5, 6].map((i) => (
            <a href="#" class="group block">
              <div class="aspect-video bg-gray-200 dark:bg-gray-800 rounded-xl flex items-center justify-center relative overflow-hidden">
                <svg class="w-12 h-12 text-gray-400 dark:text-gray-600 group-hover:text-accent-500 transition-colors" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.752 11.168l-3.197-2.132A1 1 0 0010 9.87v4.263a1 1 0 001.555.832l3.197-2.132a1 1 0 000-1.664z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <div class="absolute inset-0 bg-black/0 group-hover:bg-black/10 transition-colors" />
              </div>
              <h3 class="mt-3 font-medium text-gray-900 dark:text-white group-hover:text-accent-600 dark:group-hover:text-accent-400">
                Video Title {i}
              </h3>
              <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                TechChat Tuesdays
              </p>
            </a>
          ))}
        </div>
      </div>

      <!-- Podcasts -->
      <div>
        <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-6">
          Podcast Appearances
        </h2>
        <div class="space-y-4">
          {[1, 2, 3].map((i) => (
            <a href="#" class="group flex items-center gap-4 p-4 bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 hover:border-accent-300 dark:hover:border-accent-600 transition-colors">
              <div class="w-16 h-16 bg-gray-200 dark:bg-gray-700 rounded-lg flex items-center justify-center flex-shrink-0">
                <svg class="w-8 h-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11a7 7 0 01-7 7m0 0a7 7 0 01-7-7m7 7v4m0 0H8m4 0h4m-4-8a3 3 0 01-3-3V5a3 3 0 116 0v6a3 3 0 01-3 3z" />
                </svg>
              </div>
              <div class="flex-1">
                <h3 class="font-medium text-gray-900 dark:text-white group-hover:text-accent-600 dark:group-hover:text-accent-400">
                  TechChat Tuesdays Episode {i}
                </h3>
                <p class="text-sm text-gray-500 dark:text-gray-400">
                  Discussing AI coding agents and the future of development
                </p>
              </div>
              <svg class="w-5 h-5 text-gray-400 group-hover:text-accent-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
